<%= form_for(@plant) do |f| %>
  <% if @plant.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@plant.errors.count, "error") %> prohibited this plant from being saved:</h2>

      <ul>
      <% @plant.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :common_name %><br>
    <%= f.text_field :common_name %>
  </div>
  <div class="field">
    <%= f.label :latin_name %><br>
    <%= f.text_field :latin_name %>
  </div>
  <div class="field">
    <%= f.label :image %><br>
    <%= f.text_field :image %>
  </div>
  <div class="field">
    <%= f.label :location %><br>
    <%= select_tag "location",
     options_for_select(@plant.locations) %>
  </div>
  <div class="field">
    <%= f.label :uses %><br>
    <%= f.text_area :uses %>
  </div>
  <div class="field">
    <%= f.label :height %><br> (cm)
    <%= f.number_field :height %>
  </div>
  <div class="field">
    <%= f.label :width %><br> (cm)
    <%= f.number_field :width %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>