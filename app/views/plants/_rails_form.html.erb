<%= form_for(@plant) do |f| %>
  <% if @plant.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@plant.errors.count, "error") %> prohibited this plant from being saved:</h2>

      <ul>
      <% @plant.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="article">
    <h2>Plant</h2>
    <div class="field">
      <%= f.label :common_name %><br>
      <%= f.text_field :common_name %>
    </div>
    <div class="field">
      <%= f.label :latin_name %><br>
      <%= f.text_field :latin_name %>
    </div>
    <div class="field">
      <%= f.label :location %><br>
      <%= select(:plant, :location, @locations) %>
    </div>
    <div class="field">
      <%= f.label :size %><br>
      <%= select(:plant, :size, @sizes) %>
    </div>
    <div class="field">
      <%= f.label :uses %><br>
      <%= f.text_area :uses %>
    </div>
    <div class="field">
      <%= f.label :cautions %><br>
      <%= f.text_area :cautions %>
    </div>
    <div class="field">
      <%= f.label :image %><br>
      <%= f.text_field :image %>
    </div>
  </div>

  <div class="article">
    <h2>Flower</h2>
    <div class="field">
      <%= f.label :flower_colour %><br>
      <%= select(:plant, :flower_colour, @colours) %>
    </div>
    <div class="field">
      <%= f.label :flower_month %><br>
      <%= select(:plant, :flower_month, @months) %>
    </div>
    <div class="field">
      <%= f.label :flower_num_petals %><br>
      <%= f.number_field :flower_num_petals %>
    </div>
    <div class="field">
      <%= f.label :flower_clustered %><br>
      <%= f.check_box :flower_clustered %>
    </div>
    <div class="field">
      <%= f.label :flower_edible %><br>
      <%= f.check_box :flower_edible %>
    </div>
    <div class="field">
      <%= f.label :flower_uses %><br>
      <%= f.text_area :flower_uses %>
    </div>
    <div class="field">
      <%= f.label :flower_cautions %><br>
      <%= f.text_area :flower_cautions %>
    </div>
    <div class="field">
      <%= f.label :flower_image %><br>
      <%= f.text_field :flower_image %>
    </div>
  </div>

  <div class="article">
    <h2>Fruit</h2>

  </div>



  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>